{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "sourceMap": true,
	  "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "es2018"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
